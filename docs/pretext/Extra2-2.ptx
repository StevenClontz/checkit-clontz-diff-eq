                <!--  -->
                <!--  -->
            </li>
        <!--  -->
            <li>
                <!--  -->
                <p>
                    <m>{y} = \cos\left(6 \, t\right) + 3 \, \sin\left(6 \, t\right)</m>
                </p>
                <!--  -->
                <!--  -->
            </li>
        <!--  -->
            <li>
                <!--  -->
